{
  "schema_version": 1,
  "type": "mcp_server",
  "id": "hello-sse-server",
  "name": "Hello World MCP (SSE)",
  "version": "0.1.0",
  "license": "MIT",
  "summary": "Minimal SSE server exposing one 'hello' tool.",
  "description": "A minimal MCP server exposing a single 'hello' tool over Server-Sent Events (SSE).",
  "homepage": "https://github.com/ruslanmv/hello-mcp",
  "repository": "https://github.com/ruslanmv/hello-mcp.git",
  "publisher": "ruslanmv",

  "artifacts": [
    {
      "kind": "git",
      "spec": {
        "repo": "https://github.com/ruslanmv/hello-mcp.git",
        "ref": "main"
      }
    }
  ],

  "mcp_registration": {
    "tool": {
      "id": "hello",
      "name": "Hello Tool",
      "description": "Return a simple greeting.",
      "integration_type": "REST"
    },
    "resources": [
      {
        "id": "hello-sse-server-code",
        "name": "hello-sse-server inline code",
        "type": "inline",
        "uri": "file://examples/hello_world/server_sse.py",
        "content": "Code here"
      }
    ],
    "server": {
      "name": "hello-sse-server",
      "description": "Hello SSE server",
      "transport": "SSE",
      "url": "http://127.0.0.1:8000/",
      "associated_tools": [
        "hello"
      ],
      "associated_resources": [
        "hello-sse-server-code"
      ],
      "associated_prompts": []
    }
  }
}
