{
  "schema_version": 1,
  "type": "mcp_server",
  "id": "hello-sse-agent",
  "name": "Hello SSE Agent",
  "version": "0.1.0",
  "license": "MIT",
  "summary": "Agent that uses the Hello SSE server to greet users.",
  "description": "An MCP gateway that proxies the hello-sse-server.",
  "homepage": null,
  "repository": null,
  "publisher": null,

  "artifacts": [
    {
      "kind": "inline",
      "spec": {
        "path": "examples/agents/hello-world/server.py"
      }
    }
  ],

  "mcp_registration": {
    "tool": {
      "id": "hello-agent",
      "name": "Hello Agent Tool",
      "description": "Invokes remote greeting.",
      "integration_type": "REST"
    },
    "resources": [
      {
        "id": "hello-sse-agent-code",
        "name": "hello-sse-agent inline code",
        "type": "inline",
        "uri": "file://examples/agents/hello-world/server.py",
        "content": |
          # Python code for your agentâ€¦ (inline)
      }
    ],
    "server": {
      "name": "hello-sse-agent",
      "description": "Gateway for Hello SSE Server",
      "transport": "SSE",
      "url": "http://127.0.0.1:6288/sse",
      "associated_tools": ["hello-agent"],
      "associated_resources": ["hello-sse-agent-code"],
      "associated_prompts": []
    }
  }
}
